extends layout

block content
    #tempData(style='display: none;')
    div(id='cardDad')
    table
        tbody
            each employee, i in employees
                if (i % 6 === 0)
                    tr
                td
                        div(onclick='getCard(#{employee.employeeId})')
                            img(src='#{employee.PictureURL}')
                            br
                            p= employee.firstName + ' ' + employee.lastName

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script.
        function getCard(employeeID) {
            console.log(employeeID);
            $.ajax({
                type: "GET",
                url: "card?employeeId=" + employeeID,
                data: {format: 'html'}
            }).done(function (data) {
                $("#cardDad").html(data);
                $("#cardDad").css('display', 'block');
            });
        }
